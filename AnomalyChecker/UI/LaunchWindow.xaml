<Window x:Class="AnomalyChecker.UI.LaunchWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnomalyChecker.UI"
             mc:Ignorable="d" 
        
            Title="MainWindow" 
            ResizeMode="NoResize"
            Height="370" 
            Width="550">
    <Canvas>

        <Image Height="70"
               Canvas.Left="100"
               Source="/AnomalyChecker;component/UI Ressources/logo-groupe-balas.jpg"
               Stretch="Fill"
               Canvas.Top="29"
               Width="72"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"/>

        <TextBox Canvas.Left="194"
                 TextWrapping="Wrap"
                 Text="HydroScan"
                 Canvas.Top="29"
                 Width="208"
                 FontSize="25"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 BorderBrush="White"
                 Foreground="#FF1B4687"
                 FontFamily="Lucida Sans"/>

        <TextBox Canvas.Left="194"
                 TextWrapping="Wrap"
                 Text="Contrôle des anomalies de canalisations"
                 Canvas.Top="64"
                 Width="294"
                 BorderBrush="White"
                 Foreground="#FF1B4687"
                 FontFamily="Lucida Sans"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"/>

        <TextBox Canvas.Left="194"
                 TextWrapping="Wrap"
                 Text="Version Beta"
                 Canvas.Top="84"
                 Width="294"
                 BorderBrush="White"
                 Foreground="#FF44628E"
                 FontFamily="Lucida Sans"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 FontStyle="Italic"/>

        <TextBox Canvas.Left="116"
            TextWrapping="Wrap"
            Text="Bienvenue sur HydroScan"
            Canvas.Top="160"
            Width="306"
            FontSize="18"
            BorderBrush="White"
            Foreground="#FF1B4687"
            FontFamily="Lucida Sans" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Center"/>

        <Button Content="Fichier de configuration" Height="24" Canvas.Left="160" Canvas.Top="266" Width="194" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#FFF9FBFF" IsEnabled="{Binding IsUserAuthentified}" Command="{Binding SelectXMLFileCommand}" />
        <TextBox Canvas.Left="70"
            TextWrapping="Wrap"
            Text="Vueillez charger un fichier de spécifications"
            Canvas.Top="201"
            Width="376"
            FontSize="15"
            BorderBrush="White"
            Foreground="#FF1B4687"
            FontFamily="Lucida Sans" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" FontStyle="Italic"/>
        <Image Height="60" Canvas.Left="97" Source="/AnomalyChecker;component/UI Ressources/LeftArrow.jpg" Stretch="Fill" Canvas.Top="228" Width="55" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-2.373"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Height="60" Canvas.Left="362" Source="/AnomalyChecker;component/UI Ressources/RightArrow.jpg" Stretch="Fill" Canvas.Top="229" Width="58" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="7.792"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Label x:Name="Message" Content="{Binding LaunchWindowMessage}"  Height="26" Canvas.Left="160" Canvas.Top="291" Width="194" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FFA20F0F" HorizontalContentAlignment="Center" FontSize="11" FontWeight="Bold"/>

    </Canvas>
</Window>
