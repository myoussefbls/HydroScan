<Window x:Class="AnomalyChecker.UI.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:AnomalyChecker.UI"
        mc:Ignorable="d"
        Title="ConfigWindow"
        ResizeMode="NoResize"
        Height="600"
        Width="700">

    <Window.Resources>
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <!-- Fond blanc pour la barre de scroll -->
        </Style>
    </Window.Resources>


    <Canvas>

        <DataGrid ItemsSource="{Binding PipingSystems}" 
          AutoGenerateColumns="False"
          Background="White"
          GridLinesVisibility="None"
          CanUserAddRows="False" 
          CanUserDeleteRows="False" 
          HeadersVisibility="Column"
          ColumnWidth="*"
          ScrollViewer.VerticalScrollBarVisibility="Auto" 
          ScrollViewer.HorizontalScrollBarVisibility="Auto"
          Width="598" Height="212"
          Padding="0"
          BorderThickness="0"
          HorizontalGridLinesBrush="Transparent"
          VerticalGridLinesBrush="Transparent"
          Canvas.Left="56" Canvas.Top="216" HorizontalAlignment="Center" VerticalAlignment="Top">

            <DataGrid.Resources>
                <!-- Suppression des marges internes des cellules -->
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="0"/>
                </Style>

                <!-- Suppression des marges internes des colonnes -->
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Padding" Value="4,2,4,2"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <!-- Nom du système (Lecture seule) -->
                <DataGridTextColumn Header="Nom des systèmes" Binding="{Binding Name}" IsReadOnly="True"/>

                <!-- Matériau (Modifiable) -->
                <DataGridTextColumn Header="Dénomination des matériaux" Binding="{Binding DesignatedMaterial, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </DataGrid.Columns>
        </DataGrid>


        <!-- Bouton Continuer -->
        <Button Background="White"
                Content="Continuer"
                HorizontalAlignment="Center"
                Height="33"
                VerticalAlignment="Top"
                Width="285"
                Command="{Binding LaunchMainWindowCommand}"
                Canvas.Left="210"
                Canvas.Top="486"/>

        <!-- Logo -->
        <Image Height="70"
               Canvas.Left="192"
               Source="/AnomalyChecker;component/UI Ressources/logo-groupe-balas.jpg"
               Stretch="Fill"
               Canvas.Top="29"
               Width="72"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"/>

        <!-- Texte HydroScan -->
        <TextBox Canvas.Left="286"
                 TextWrapping="Wrap"
                 Text="HydroScan"
                 Canvas.Top="29"
                 Width="208"
                 FontSize="25"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 BorderBrush="White"
                 Foreground="#FF1B4687"
                 FontFamily="Lucida Sans"/>

        <!-- Texte descriptif -->
        <TextBox Canvas.Left="286"
                 TextWrapping="Wrap"
                 Text="Contrôle des anomalies de canalisations"
                 Canvas.Top="64"
                 Width="294"
                 BorderBrush="White"
                 Foreground="#FF1B4687"
                 FontFamily="Lucida Sans"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"/>

        <!-- Texte Version Beta -->
        <TextBox Canvas.Left="286"
                 TextWrapping="Wrap"
                 Text="Version Beta"
                 Canvas.Top="84"
                 Width="294"
                 BorderBrush="White"
                 Foreground="#FF44628E"
                 FontFamily="Lucida Sans"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 FontStyle="Italic"/>
        <TextBox Canvas.Left="196"
            TextWrapping="Wrap"
            Text="Spécifications des materiaux"
            Canvas.Top="179"
            Width="329"
            FontSize="18"
            BorderBrush="White"
            Foreground="#FF1B4687"
            FontFamily="Lucida Sans" HorizontalAlignment="Center" VerticalAlignment="Top" TextAlignment="Center"/>

    </Canvas>
</Window>
