<Window x:Class="AnomalyChecker.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression.blend/2008" 
        xmlns:local="clr-namespace:AnomalyChecker.UI"
        mc:Ignorable="d" 
        
        Title="MainWindow" 
        ResizeMode="NoResize"
        Height="350" 
        Width="600">

    <Canvas>
        <ComboBox Name="SystemTypes"  
                  Height="22" 
                  Canvas.Left="70" 
                  Canvas.Top="63" 
                  Width="462" 
                  HorizontalAlignment="Left" 
                  VerticalAlignment="Center" 
                  ItemsSource="{Binding PipingSystemTypes}" 
                  DisplayMemberPath="Name" 
                  SelectedItem="{Binding SelectedPipingSystemType, Mode=TwoWay}"/>

        <ScrollViewer x:Name="mainScrollViewer" 
                      VerticalScrollBarVisibility="Auto" 
                      Background="White" 
                      HorizontalAlignment="Center" 
                      Canvas.Left="33" 
                      Canvas.Top="135" 
                      VerticalAlignment="Top">
            <DataGrid ItemsSource="{Binding PreSelectedSystemNames}" 
                      AutoGenerateColumns="False" 
                      Background="White"
                      GridLinesVisibility="None"
                      RowBackground="White"
                      AlternatingRowBackground="White"
                      BorderThickness="0"
                      HeadersVisibility="Column"
                      Height="145" 
                      Width="250"
                      SelectionMode="Single"
                      SelectedItem="{Binding SelectedSystem, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Noms des systèmes" Binding="{Binding Name}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

        <ScrollViewer x:Name="mainScrollViewer2" 
                      VerticalScrollBarVisibility="Auto" 
                      Background="White" 
                      HorizontalAlignment="Left" 
                      Canvas.Left="301" 
                      Canvas.Top="135" 
                      VerticalAlignment="Center">
            <DataGrid ItemsSource="{Binding SelectedSystemElements}" 
                      AutoGenerateColumns="False" 
                      Background="White"
                      GridLinesVisibility="None"
                      AlternationCount="2"
                      BorderThickness="0"
                      HeadersVisibility="Column"
                      Height="145" 
                      Width="250"
                      SelectionMode="Single"
                      SelectedItem="{Binding SelectedSystem, Mode=TwoWay}">

                <!-- Appliquer la couleur sur toute la ligne -->
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding AnomalyType}" Value="Anomalie Certaine">
                                <Setter Property="Background" Value="#E0A0A1"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding AnomalyType}" Value="Anomalie potentielle">
                                <Setter Property="Background" Value="#FEFD9F"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding ElementID}" Width="*"/>
                    <DataGridTextColumn Header="Statut" Binding="{Binding AnomalyType}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
    </Canvas>
</Window>
